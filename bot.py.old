import discord
from discord.ext import commands

TOKEN = 'OTcwNDQ4MTM1MzIxMTgyMjk5.GOO12a.Qb9t6FSwjjDF8UdN2ZmvHSOm7EjhFCfeRt74nY'

description = '''AilurusBot is written in Python!
                 Powered by a Raspberry Pi 3B+ :)'''
                 
# this specifies what extensions to load when the bot starts up.
startup_exts = ["owner", "members", "calculator"]

bot = commands.Bot(command_prefix='~', description=description)

@bot.event
async def on_ready():
    print('Logged in as')
    print(bot.user.name)
    print(bot.user.id)
    print('------')

@bot.command()
async def load(ext_name : str):
    '''Loads an extension.'''
    try:
        bot.load_extension(ext_name)
    except (AttributeError, ImportError) as e:
        await bot.say("```py\n{}: {}\n```".format(type(e).__name__, str(e)))
        return
    await bot.say("{} loaded.".format(ext_name))   

